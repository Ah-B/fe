<% layout('boilerplate') -%>
    <script type="text/javascript" src="/js/utility/chat.js"></script>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">Booker</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/books">Books</a></li>
                <li class="active"><a href="/authors">Authors</a></li>
            </ul>
        </div>
    </nav>


    <div ng-controller="authorController" ng-init="authorId = '<%-query%>';currentUser='<%-currentUser%>'">
        <h1>{{author.fName}}{{author.lName}}</h1>
        <button class="btn btn-success" id="chatStart" name="button">Start Chatting</button>
        <h1>Other books</h1>
        <div ng-repeat="book in author.books" class="thumbnail">
            <h6>Title :<a href="/book/{{book._id}}">{{book.title}}</a></h6>
            <h6>Date: {{book.date}}</h6>
            <h6>Genre : {{book.genre}}</h6>
        </div>
        <h1>rating:{{rating}}</h1>
        <form ng-submit="rate()">
            <input ng-model="ratingModel">
            </input>
            <button type="submit" class="btn btn-success">
                    rate!
            </button>
        </form>
        <div ng-repeat="comment in comments" class="thumbnail">
          <h2>{{comment.commenter.fName}} {{comment.commenter.lName}}</h2>
          <h6>{{comment.date}}</h6>
          <h2>{{comment.text}}</h2>
        </div>
        <h2>add comment</h2>

        <form ng-submit="comment()">
            <textarea id='text' ng-model="commentModel">
            </textarea >
                  <button type="submit" class="btn btn-success">
		                  Submit!
		                  </button>
                </form>


                        <div class="chatRoom">
                          <h1>ChatRoom</h1>
                          <div id="connectedUsers">

                          </div>
                          <div>
                            <div id="notice"></div>
                            <div id="messages"></div>
                          </div>
                          <input id="message" type="text" maxlength="14" name="name" value="" placeholder="message">
                          <button type="button" name="button" id="send">Send Message</button>
                          <button type="button" name="button" id="stop">stop</button>

                          <script type="text/javascript">
                          console.log("chat log");
                          console.log('<%-userFName%>','<%-userLName%>');
                            initChat('<%-query%>','<%-userFName%>','<%-userLName%>');
                          </script>
                        </div>
        </div>
