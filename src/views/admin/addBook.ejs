<% layout('adminBoilerplate') -%>
<section id="content">
	<section class="hbox stretch" ng-controller="adminBooksController">
		<section>
			<section class="vbox">
				<section class="scrollable padder-lg" id="bjax-target">
					<br>
					<section class="panel panel-default">
						<section class="panel panel-default">
							<header class="panel-heading font-bold"> Add book </header>
							<div class="panel-body">
								<form ng-submit="addBook()" class="form-horizontal" method="get">
									<div class="form-group">
										<label class="col-sm-2 control-label">Title</label>
										<div class="col-sm-10"> <input ng-model="addTitleModel" type="text" class="form-control "> </div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Author</label>
										<div class="col-sm-10">
											<select class="form-control m-b" ng-model="addAuthorModel">
												<option ng-repeat='author in authors'  value="{{author._id}}">{{author.fName}} {{author.lName}}</option>
											</select>
										</div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Writing date</label>
										<div class="col-sm-10"> <input ng-model="addDateModel" type="text" class="form-control"> </div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Description</label>
										<div class="col-sm-10"> <textarea ng-model="addDescriptionModel" rows="4" cols="50" type="text" class="form-control"></textarea>
                     </div>
									</div>
                  <div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Type</label>
										<div class="col-sm-10">
											<select class="form-control m-b" ng-model="addTypeModel">
												<option value="free">Free</option>
												<option value="premium">Premium</option>
											</select>
										</div>
									</div>
                  <div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Genre</label>
										<div class="col-sm-10">
											<select class="form-control m-b" ng-model="addGenreModel">
												<option value="art">Art</option>
												<option value="history">History</option>
												<option value="mystery">Mystery</option>
												<option value="horror">Horror</option>
												<option value="romance">Romance</option>
												<option value="health">Health</option>
												<option value="philosophy">Philosophy</option>
												<option value="comedy">Comedy</option>
												<option value="travel">Travel</option>
												<option value="science-fiction">Science-fiction</option>
												<option value="law">Law</option>
												<option value="finance">Finance</option>
												<option value="religion">Religion</option>
											</select>
										</div>
									</div>
                  <div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Pdf Link</label>
										<div class="col-sm-10"> <input ng-model="addPdfModel" type="text" class="form-control "> </div>
									</div>
                  <div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Image Link</label>
										<div class="col-sm-10"> <input ng-model="addImageModel" type="text" class="form-control "> </div>
									</div>
                  <div class="row">
                      <div class="col-sm-10">
                      </div>
                      <div class="col-sm-2" style="margin-bottom : 8px">
                          <button type="submit" class="btn btn-s-md btn-success btn-rounded">Add book</button>
                      </div>
                  </div>
								</form>
							</div>
						</section>
					</section>
				</section>
			</section>
		</section>
	</section>
</section>
