<% layout('adminBoilerplate') -%>
    <section id="content">
        <section class="hbox stretch" ng-controller="adminAuthorsController">
            <section>
                <section class="vbox">
                    <section class="scrollable padder-lg" id="bjax-target">
                        <br>
                        <section class="panel panel-default">
                            <header class="panel-heading">Authors</header>
                            <div class="table-responsive">
                                <table class="table table-striped b-t b-light">
                                    <thead>
                                        <tr>
                                            <th class="th-sortable" data-toggle="class">Id</th>
                                            <th class="th-sortable" data-toggle="class">First Name </th>
                                            <th>Last Name</th>
                                            <th>Birth date</th>
                                            <th>Death date</th>
                                            <th>Update</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="author in authors">
                                            <td>{{author._id}}</td>
                                            <td>{{author.fName}}</td>
                                            <td>{{author.lName}}</td>
                                            <td>{{author.birthDate}}</td>
                                            <td>{{author.deathDate}}</td>
                                            <td><a href="/admin/author/{{author._id}}" data-toggle="class"><i class="fa fa-cog text text-success"></i></a>
                                            <td><a href="#" ng-click="removeAuthor(author._id)" data-toggle="class"><i class="fa fa-times text-danger text"></i></a>
                                        </tr>
                                    </tbody>
                                </table>
                                <br>
                                <div class="row">
                                    <div class="col-sm-10">
                                    </div>
                                    <div class="col-sm-2" style="margin-bottom : 8px">
                                        <a href="author/add" class="btn btn-s-md btn-success btn-rounded">Add new author</a>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </section>
                </section>
            </section>
        </section>
    </section>
