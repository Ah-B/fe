<% layout('adminBoilerplate') -%>
<section id="content">
	<section class="hbox stretch" ng-controller="adminAuthorsController">
		<section>
			<section class="vbox">
				<section class="scrollable padder-lg" id="bjax-target">
					<br>
					<section class="panel panel-default">
						<section class="panel panel-default">
							<header class="panel-heading font-bold"> Add author </header>
							<div class="panel-body">
								<form ng-submit="addAuthor()" class="form-horizontal" method="get">
									<div class="form-group">
										<label class="col-sm-2 control-label">First Name</label>
										<div class="col-sm-10"> <input ng-model="addfNameModel" type="text" class="form-control "> </div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Last Name</label>
										<div class="col-sm-10"> <input ng-model="addlNameModel" type="text" class="form-control "> </div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Birth Date</label>
										<div class="col-sm-10"> <input ng-model="addBirthDateModel" type="text" class="form-control "> </div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Death Date</label>
										<div class="col-sm-10"> <input ng-model="addDeathDateModel" type="text" class="form-control "> </div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Description</label>
										<div class="col-sm-10"> <textarea ng-model="addDescriptionModel" rows="4" cols="50" type="text" class="form-control"></textarea>
										</div>
									</div>
									<div class="line line-dashed b-b line-lg pull-in"></div>
									<div class="form-group">
										<label class="col-sm-2 control-label">Image Link</label>
										<div class="col-sm-10"> <input ng-model="addImageModel" type="text" class="form-control "> </div>
									</div>
									<div class="row">
										<div class="col-sm-10">
										</div>
										<div class="col-sm-2" style="margin-bottom : 8px">
											<button type="submit" class="btn btn-s-md btn-success btn-rounded">Add author</button>
										</div>
									</div>
								</form>
							</div>
						</section>
					</section>
				</section>
			</section>
		</section>
	</section>
</section>
