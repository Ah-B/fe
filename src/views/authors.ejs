<% layout('boilerplate') -%>
<section id="content" ng-controller="authorsController">
<header class="bg-white-only header header-md navbar navbar-fixed-top-xs">
<ul class="nav navbar-nav hidden-xs">
</ul>
<form class="navbar-form navbar-left input-s-lg m-t m-l-n-xs hidden-xs" role="search">
<div class="form-group">
<div class="input-group"> <span class="input-group-btn"> <div  class=" btn-sm bg-white btn-icon rounded"><i class="fa fa-search"></i></div> </span> <input ng-model="search.fName" type="text" class="form-control input-sm no-border rounded" placeholder="Fing by first name">
</div>
</div>
</form>
<form class="navbar-form navbar-left input-s-lg m-t m-l-n-xs hidden-xs" role="search">
<div class="form-group">
<div class="input-group"> <span class="input-group-btn"> <div  class=" btn-sm bg-white btn-icon rounded"><i class="fa fa-search"></i></div> </span> <input ng-model="search.lName" type="text" class="form-control input-sm no-border rounded" placeholder="Find by last name">
</div>
</div>
</form>
</header>
<section class="hbox stretch">
<section>
<section class="vbox">
<section class="scrollable padder-lg">

  <h2 class="font-thin m-b">Authors</h2>
  <p>Showing {{filteredItems.length}} results of {{authors.length}}</p>
<br>
  <div class="row row-sm">
    <div ng-repeat="author in (filteredItems = (authors  | filter : search | orderBy: authorOrder ))" class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
      <div class="item">
        <div class="pos-rlt">
          <div class="item-overlay opacity r r-2x bg-black">
            <div class="center text-center m-t-n"> <a href="#"><i class="fa fa-file-text-o i-2x"></i></a><h4>View Author</h4> </div>
          </div>
          <a href="track-detail.html"><img ng-src="/Images/{{author.imageUrl}}" width="200" height="200" alt="" class="r r-2x img-full"></a>
        </div>
        <div class="padder-v"> <a href="track-detail.html" data-bjax="" data-target="#bjax-target" data-el="#bjax-el" data-replace="true" class="text-ellipsis">{{author.fName}} {{author.lName}}</a> <a href="track-detail.html" data-bjax="" data-target="#bjax-target"
          data-el="#bjax-el" data-replace="true" class="text-ellipsis text-xs text-muted">{{author.birthDate}} - {{author.deathDate}}</a> </div>
      </div>
    </div>

  </div>

</section>
</section>
</section>
</section>
</section>
