<head>
	<meta charset="utf-8" />
	<title>Booker | Desktop Application</title>
	<meta name="description" content="app, web app, responsive, admin dashboard, admin, flat, flat ui, ui kit, off screen nav" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<link rel="stylesheet" href="/lib/animate/animate.css">
	<link rel="stylesheet" href="/css/desktopstyle.css">
	<link rel="stylesheet" type="text/css" href="/lib/sweetalert/sweetalert.css">
	<link rel="stylesheet" href="/template/css/app.v1.css" type="text/css" />
</head>

<body ng-app="app" class="">
	<script type="text/javascript" src="/lib/chart/Chart.min.js"></script>
	<script type="text/javascript" src="/lib/momentjs/moment.js"></script>
	<script type="text/javascript" src="/lib/angular/angular.min.js"></script>
	<script type="text/javascript" src="/lib/chart/tc-angular-chartjs.min.js"></script>

	<script type="text/javascript" src="/js/utility/ui.js"></script>
	<script type="text/javascript" src="/js/utility/chat.js"></script>
	<script type="text/javascript" src="/lib/sweetalert/sweetalert.min.js"></script>
	<script type="text/javascript" src="/lib/jquery/jquery.min.js"></script>
	<script type="text/javascript" src="/lib/socket.io/socket.io.js"></script>
	<script type="text/javascript" src="/lib/momentjs/moment.js"></script>
	<script type="text/javascript" src="/lib/angular/angular-resource.min.js"></script>
	<script type="text/javascript" src="/lib/angular/angular-animate.min.js"></script>


	<script type="text/javascript" src="/js/app.js"></script>
	<script type="text/javascript" src="/js/controllers/profileController.js"></script>
	<script type="text/javascript" src="/js/controllers/booksController.js"></script>
	<script type="text/javascript" src="/js/controllers/statsController.js"></script>

	<script type="text/javascript" src="/js/controllers/bookController.js"></script>
	<script type="text/javascript" src="/js/controllers/authorsController.js"></script>
	<script type="text/javascript" src="/js/controllers/authorController.js"></script>
	<script type="text/javascript" src="/js/controllers/homeController.js"></script>

	<!-- READER SCRIPTS -->
	<script type="text/javascript" src="/lib/pdfjs/pdf.js"></script>
	<script type="text/javascript" src="/js/controllers/readerController.js"></script>
	<script type="text/javascript" src="/js/directives/angular-pdf.js"></script>



	<!-- /.aside -->
	<!-- ****************************************CONTENT**************************************************** -->
	<section class="vbox">

		<section>
			<section class="hbox stretch">


            <section class="scrollable " ng-controller="readerController" ng-init="currentUser='<%-currentUser%>';currentBookId='<%-libbook%>'">
                <div id="reader">
                    <div class="readerWrapper">
                        <ng-pdf template-url="/partials/viewer.html" canvasid="pdf" scale="page-fit" page=<%-currentPage%> ></ng-pdf>
                    </div>
                </div>
                <section class="panel panel-default ui " style="margin-left:20px; margin-right:20px">
                    <header class="panel-heading font-bold">
                        <h1>{{currentBook.book.title}}</h1>
                    </header>
                    <div class="panel-body">
                        <h5 class="font-bold">Info</h5>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a href="#"> <span class=" pull-right">{{currentBookAuthor.fName}} {{currentBookAuthor.lName}}</span> Author </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#"> <span class=" pull-right">{{currentBook.book.genre}}</span> Genre </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#"> <span class="badge pull-right">{{currentBook.lastReadDate}}</span> Last read date </a>
                            </li>
                            <li class="list-group-item">
                                <a href="#"> <span class="badge pull-right">{{currentBook.lastPage}}</span> Last read page </a>
                            </li>
                        </ul>
                        <a href="#" class=" ui btn btn-s-md btn-info btn-rounded" id="showReaderButton" ng-click="ngReaderStart(currentBook.book.pdfUrl,currentBook.book.title,currentBook.book._id,currentBook.lastPage)" onclick="showReader()">Resume reading</a>
                    </div>
                </section>

			</section>
		</section>
	</section>

</body>

</html>
