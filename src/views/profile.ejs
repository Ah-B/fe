        <p>Hello {{user.fName}}</p>


        <h1>Library</h1>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div ng-repeat="book in user.library" class="thumbnail">
                        <h3>book:</h3>
                        <h5>{{book.book.title}}</h5>
                        <h3>CurrentPage</h3>
