<% layout('listBoilerplate') -%>
<body  ng-controller="profileController" ng-init="currentUser='<%-currentUser%>'" class="ui">
	<section class="vbox">
		<section>
			<section class="hbox stretch">
				<!-- .aside -->
				<aside class="bg-black dk nav-xs aside hidden-print ui" id="nav">
					<section class="vbox">
						<section class="w-f-md scrollable">
							<div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 253px;">
								<div class="slim-scroll" data-height="auto" data-disable-fade-out="true" data-distance="0" data-size="10px" data-railopacity="0.2" style="overflow: hidden; width: auto; height: 253px;">
									<!-- nav -->
									<nav class="nav-primary hidden-xs">
										<ul class="nav bg clearfix">
											<li>
												<div class="navbar-header aside bg-info dk nav-xs">
													<a class="btn btn-link visible-xs" data-toggle="class:nav-off-screen,open" data-target="#nav,html"> <i class="icon-list"></i> </a>
													<a href="/" class="navbar-brand text-lt"> <i class="icon-book-open"></i> <span class="hidden-nav-xs m-l-sm">Booker</span> </a>
													<a class="btn btn-link visible-xs" data-toggle="dropdown" data-target=".user"> <i class="icon-settings"></i> </a>
												</div>
											</li>
											<li class="hidden-nav-xs padder m-t m-b-sm text-xs text-muted"> </li>
											<li>
												<a href="/"> <i class="icon-home text-success-lter"></i> <span class="font-bold">Home</span> </a>
											</li>
											<li>
												<a href="/profile"> <i class="icon-user text-success-lter"></i> <span class="font-bold">Profile</span> </a>
											</li>
											<li>
												<a href="/books"> <i class="icon-notebook icon text-info"></i> <span class="font-bold">Books</span> </a>
											</li>
											<li>
												<a href="/genres"> <i class="fa fa-book text-info"></i> <span class="font-bold">Genres</span> </a>
											</li>
											<li>
												<a href="/authors"> <i class="fa fa-pencil text-info"></i><span class="font-bold">Authors</span> </a>
											</li>
											<li>
												<a href="/stats"> <i class="icon-pie-chart text-danger"></i> <span class="font-bold">Stats</span> </a>
											</li>
											<li class="m-b hidden-nav-xs"></li>
										</ul>
										<ul class="nav text-sm">
											<li class="hidden-nav-xs padder m-t m-b-sm text-xs text-muted"> <span class="pull-right"></span></li>
											<li>
												<a href="/auth/logout"> <i class="icon-logout"></i> <span>Logout</span> </a>
											</li>
										</ul>
									</nav>
									<!-- / nav -->
								</div>
								<div class="slimScrollBar" style="width: 10px; position: absolute; top: -285px; opacity: 0.4; display: block; border-radius: 7px; z-index: 99; right: 0px; height: 128.018px; background: rgb(0, 0, 0);"></div>
								<div class="slimScrollRail" style="width: 10px; height: 100%; position: absolute; top: 0px; display: none; border-radius: 7px; opacity: 0.2; z-index: 90; right: 0px; background: rgb(51, 51, 51);"></div>
							</div>
						</section>
					</section>
				</aside>
				<!-- /.aside -->
				<section id="content">
					<section class="vbox">
						<section class="">
							<section class="hbox stretch">
								<aside class="aside-lg bg-light lter b-r">
									<section class="vbox">
										<section class="scrollable">
											<!-- Modal -->
											<div id="myModal" class="modal fade" role="dialog">
												<div class="modal-dialog">
													<!-- Modal content-->
													<div class="modal-content">
														<div class="modal-header">
															<button type="button" class="close" data-dismiss="modal">&times;</button>
															<h4 class="modal-title">Choose avatar</h4>
														</div>
														<div class="modal-body">
                              <img ng-click="avatar('a0')" src="/Images/avatar/a0.png" style="margin-bottom:20px"class="img-circle">
                              <img  ng-click="avatar('a1')" src="/Images/avatar/a1.png"style="margin-bottom:20px" class="img-circle">
                              <img  ng-click="avatar('a2')" src="/Images/avatar/a2.png" style="margin-bottom:20px"class="img-circle">
                              <img  ng-click="avatar('a3')" src="/Images/avatar/a3.png" style="margin-bottom:20px"class="img-circle">
                              <img  ng-click="avatar('a4')" src="/Images/avatar/a4.png" class="img-circle">
                              <img ng-click="avatar('a5')" src="/Images/avatar/a5.png" class="img-circle">
                              <img  ng-click="avatar('a6')" src="/Images/avatar/a6.png" class="img-circle">
                              <img  ng-click="avatar('a7')" src="/Images/avatar/a7.png" class="img-circle">
                            </div>
													</div>
												</div>
											</div>
											<div class="wrapper">
												<div class="text-center m-b m-t">
													<a href="#"data-toggle="modal" data-target="#myModal" class="thumb-lg"> <img ng-src="/Images/avatar/{{user.avatar}}.png" class="img-circle"> </a>
													<div>
														<div class="h3 m-t-xs m-b-xs">{{user.fName}} {{user.lName}}</div>
													</div>
												</div>
												<div class="panel wrapper">
													<div class="row text-center">
														<div class="col-xs-4">
															<a href="#"> <span class="m-b-xs h4 block">{{readingHabitsPages}}</span> <small class="text-muted">Pages read</small> </a>
														</div>
														<div class="col-xs-8">
															<a href="#"> <span class="m-b-xs h4 block">{{readingHabitsHours}} : {{readingHabitsMinutes}} : {{readingHabitsSeconds}}</span> <small class="text-muted">Reading time </small> </a>
														</div>
													</div>
												</div>
												<div>
												</div>
											</div>
										</section>
									</section>
								</aside>
								<aside >
									<div class="row">
										<div class="col-lg-4">
											<h2>Personal Library</h2>
											<input type="text" ng-model="libSearch.book.title" class="form-control rounded">
										</div>
									</div>
									<br>
									<section class="vbox" class="bg-white">
										<section >
											<div class="tab-pane active" id="activity">
												<ul class="list-group no-radius m-b-none m-t-n-xxs list-group-lg no-border ">
													<li ng-repeat="book in user.library | filter : libSearch " class=" ngRepeatAnimation list-group-item">
														<a href="/libbook/{{book.book._id}}/{{book.lastPage}}" class="thumb-sm pull-left m-r-sm"> <img ng-src="/Images/{{book.book.imageUrl}}" width="40" style="height:40px !important"class="img-circle"> </a>
														<a href="/libbook/{{book.book._id}}/{{book.lastPage}}" class="clear"> <small class="pull-right">Last page {{book.lastPage}}</small> <strong class="block">{{book.book.title}}</strong>
														<small>Last Read date : {{book.lastReadDate| date:'medium'}}</small>
														</a>
													</li>
												</ul>
											</div>
											<div class="tab-pane" id="interaction">
											</div>
										</section>
									</section>
								</aside>
							</section>
						</section>
					</section>
					<a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen,open" data-target="#nav,html"></a>
				</section>
			</section>
		</section>
	</section>
</body>
