<% layout('boilerplate') -%>
	<section id="content" ng-controller="bookController" ng-init="bookId = '<%-query%>';currentUser='<%-currentUser%>';userType='<%-userType%>'">
		<section class="vbox">
			<section class="scrollable wrapper-lg">
				<div class="row">
					<div class="col-sm-8">
						<div class="blog-post">
							<div class="post-item">
								<div class="post-media"> <img src="/Images/{{book.imageUrl}}" width="800" height="400" class="img-full"> </div>
								<div class="caption wrapper-lg">
									<h2 class="post-title">{{book.title}}</h2>
									<h3>{{book.author.fName}} {{book.author.lName}}</h3>
									<br>
									<div class="post-sum">
										<p>{{book.description}}</p>
									</div>
									<div class="line line-lg"></div>
									<div class="text-muted">
										<a href="#" class="m-l-sm">
											<i class="fa fa-clock-o icon-muted"></i> {{book.date}}
										</a>
										<a href="#" class="m-l-sm">
											<i class="fa fa-comment-o icon-star"></i> {{rating}}
										</a>
									</div>
									<div class="line line-lg"></div>
									<div style="margin-left:200px">
										<a href="#" class="btn btn-s-md btn-info btn-rounded" ng-click="addToLibrary()"> <i class="fa fa-plus"></i> Add to library</a>
										<a href="#" class="btn btn-s-md btn-info btn-rounded" ng-click="rate()"><i class="icon-bubbles"></i>  Rate</a>
										<a href="#" class="btn btn-s-md btn-info btn-rounded" id="chatStart" onclick="showChat()"><i class="icon-star"></i> Chat</a>
									</div>
								</div>
							</div>
							<h4 class="m-t-lg m-b">{{comments.length}} Comments</h4>
							<section class="comment-list block">
								<article ng-repeat="comment in comments" id="comment-id-1" class="comment-item">
									<a class="pull-left thumb-sm avatar"> <img src="/template/images/a1.png" class="img-circle" alt="..."> </a> <span class="arrow left"></span>
									<section class="comment-body panel panel-default">
										<header class="panel-heading bg-white">
											<a href="#">{{comment.commenter.fName}} {{comment.commenter.lName}}</a>
											<label class="label bg-info m-l-xs"></label>
											<span class="text-muted m-l-sm pull-right"> <i class="fa fa-clock-o"></i> {{comment.date}} </span>
										</header>
										<div class="panel-body">
											<div>
												{{comment.text}}
											</div>
										</div>
									</section>
								</article>
							</section>
							<h4 class="m-t-lg m-b">Leave a comment</h4>
							<form ng-submit="comment()">
								<div class="form-group"> <textarea ng-model="commentModel" class="form-control" rows="5" placeholder="Type your comment"></textarea> </div>
								<div class="form-group"> <button type="submit" class="btn " style="background-color:#36B0C8;border-color:#36B0C8;color:#fff !important">Submit comment</button> </div>
							</form>
						</div>

