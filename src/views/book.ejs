			<div class="container">
				<div class="col-md-12">
					<p>&copy; Copyright 2014 Chemistry. - Purchase today at <a href="http://bit.ly/OgJ2eL">ThemeForest</a></p>
				</div>
			</div>
		</div>
		<!-- Footer -->

		<div class="chatBottomBar">
			<input class="form-control" id="chatMessage" type="text" placeholder="message" />
			<a class="btn btn-primary btn-sm btn-orange uppercase cart-button" id="send">Send</a>
			<a class="btn btn-primary btn-sm btn-orange uppercase cart-button" id="stop" onclick="hideChat()">Leave</a>

		</div>
		<div class="chatRoom">

			<div class="section-title"></div>
			<div class="chatMessages">
				<div id="messages"></div>
				<div id="notice"></div>
			</div>

			<script type="text/javascript">
				initChat('<%-query%>', '<%-userFName%>', '<%-userLName%>');
			</script>
		</div>

	</div>
