<% layout('boilerplate') -%>
<section id="content" ng-controller="booksController">
<header class="bg-white-only header header-md navbar navbar-fixed-top-xs">
	<ul class="nav navbar-nav hidden-xs">
	</ul>
	<form class="navbar-form navbar-left input-s-lg m-t m-l-n-xs hidden-xs" role="search">
		<div class="form-group">
			<div class="input-group"> <span class="input-group-btn"> <div class="btn btn-sm bg-white btn-icon rounded"><i class="fa fa-search"></i></div> </span> <input type="text" ng-model="search.title" class="form-control input-sm no-border rounded" placeholder="Find book">
			</div>
		</div>
	</form>
</header>
<section class="hbox stretch">
	<aside class="aside bg-light dk" id="sidebar">
		<section class="vbox animated fadeInUp">
			<section class="scrollable hover">
				<div ng-repeat="genre in genres" class="list-group no-radius no-border no-bg m-t-n-xxs m-b-none auto">
					<a href="#" ng-click="changeGenre(genre)" class="list-group-item">{{genre}}</a>
				</div>
			</section>
		</section>
	</aside>
	<section>
		<section class="vbox">
			<section class="scrollable padder-lg w-f-md" id="bjax-target">
				<h2 class="font-thin m-b"> </h2>
				<h2 class="font-thin m-b">Authors</h2>
			  <p>Showing {{filteredItems.length}} results of {{books.length}}</p>
				<div class="row row-sm">
					<div  ng-repeat="book in (filteredItems = (books  | filter : search | filter : genreFilter | orderBy: bookOrder ))" class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
						<div class="item">
							<div class="pos-rlt">
								<div class="bottom"> </div>
								<div class="item-overlay opacity r r-2x bg-black">
									<div class="center text-center m-t-n"> <a href="#"><i class="fa fa-file-text-o i-2x"></i></a> <h4>View Book </h4></div>
								</div>
								<a href="#"><img ng-src="/Images/{{book.imageUrl}}" width="150" height="250" alt="" class="r r-2x img-full"></a>
							</div>
							<div class="padder-v"> <a href="#" class="text-ellipsis">{{book.title}}</a> <a href="#" class="text-ellipsis text-xs text-muted">{{book.author.fName}} {{book.author.lName}}</a> </div>
						</div>
					</div>

				</div>
			</section>
		</section>
	</section>
	<!-- side content -->
	<!-- / side content -->
</section>
<a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen,open" data-target="#nav,html"></a>
</section>
